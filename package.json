  "description": "A powerful and flexible React hook for managing advanced filtering operations",
  "author": "maemreyo",
  "keywords": [
    "react",
    "hooks",
    "filter",
    "search",
    "query",
    "pagination",
    "typescript"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/matthewngo/react-filterize"
  },
  "bugs": {
    "url": "https://github.com/matthewngo/react-filterize/issues"
  },
  "homepage": "https://github.com/matthewngo/react-filterize#readme",
  "module": "dist/react-filterize.esm.js",
  "size-limit": [
    {
      "path": "dist/react-filterize.cjs.production.min.js",
